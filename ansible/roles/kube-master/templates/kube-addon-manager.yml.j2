apiVersion: v1
kind: Pod
metadata:
  name: kube-addon-manager
  namespace: kube-system
  labels:
    component: kube-addon-manager
    version: v4
spec:
  hostNetwork: true
  containers:
  - name: kube-addon-manager
    image: gcr.io/google-containers/kube-addon-manager:v5
    resources:
      requests:
        cpu: 5m
        memory: 50Mi
    volumeMounts:
    - mountPath: {{ kube_addons_dir }}
      name: kube-addons-host
      readOnly: true
  volumes:
  - hostPath:
      path: {{ kube_addons_dir }}
    name: kube-addons-host
