
apiVersion: v1
kind: Pod
metadata:
  name: kube-controller-manager
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-controller-manager
    image: {{ docker_hyperkube }}
    command:
    - /hyperkube
    - controller-manager
    - --address=0.0.0.0
    - --cluster-name="kubernetes"
    - --leader-elect=true
    - --master={{ master_endpoints }}            #http://127.0.0.1:8080     # Master is local server
    - --port=10252
    - --root-ca-file={{ kube_ca_cert }}
    #- --service-account-private-key-file={{ apiServer_tls_key }}
    livenessProbe:
      httpGet:
        host: 127.0.0.1
        path: /healthz
        port: 10252
      initialDelaySeconds: 15
      timeoutSeconds: 1
    volumeMounts:
    - mountPath: {{ kube_certs_dir }}
      name: ssl-certs-kubernetes
      readOnly: true
    - mountPath: {{ kube_ca_cert | dirname }}
      name: ssl-certs-host
      readOnly: true
  volumes:
  - hostPath:
      path: {{ kube_certs_dir }}
    name: ssl-certs-kubernetes
  - hostPath:
      path: {{ kube_ca_cert | dirname }}
    name: ssl-certs-host

