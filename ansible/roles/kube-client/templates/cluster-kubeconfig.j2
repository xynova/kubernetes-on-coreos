---

apiVersion: v1
kind: Config
current-context: system-context
contexts:
  - context:
      cluster: system
      namespace: kube-system
      user: admin-account
    name: system-context
  - context:
      cluster: system
      namespace: default
      user: admin-account
    name: default-context
clusters:
  - cluster:
      certificate-authority: {{ kube_ca_cert }}
      server: {{ master_endpoints }}
    name: system
users:
  - name: admin-account
    user:
      client-certificate: {{ kube_clusterAdmin_cert }}
      client-key: {{ kube_clusterAdmin_key }}

